// colors
$primary = #0091ea
$accent = #64c1ff
$info = #0064b7
$secondary = #d32f2f
$warning = #9a0007
$error = #ffffff
$success = #2e7d32

$accentColor = $secondary
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

$navbarHeight = 3.6rem
$sidebarWidth = 16rem
$contentWidth = 740px

$lightBackground = lighten($codeBgColor, 95%)

.custom-block
  &.tip
    background-color $lightBackground
    border-color $info
  &.warning
    background-color lighten($accentColor, 85%)
    border-color $accentColor
    color $textColor
    .custom-block-title
      color $textColor
    a
      color $accentColor