.content
  font-size 14px

  a
    code
      color $secondary

  .custom-block
    color $textColor
    &.tip
      background-color $lightBackground
      border-color $success
      color $textColor
      .custom-block-title
        color $textColor
      a
        color $accentColor
    &.warning
      background-color $lightBackground
      border-color $info
      color $textColor
      .custom-block-title
        color $textColor
      a
        color $accentColor
    &.danger
      color $textColor
      .custom-block-title
        color $textColor
      a
        color $accentColor
      background-color lighten($accentColor, 90%)
      border-color $accentColor



.theme-color-intense
  color $secondary

.theme-color-text
  color $textColor

.light-background
  background-color $lightBackground

.border-bottom
  border-bottom-style solid
  border-color $secondary
  border-width 2px

.small-text
  font-size 12px