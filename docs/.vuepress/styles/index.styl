.content
  font-size 14px

  a
    code
      color $secondary

  .custom-block
    &.tip
      background-color $lightBackground
      border-color $info
    &.warning
      background-color lighten($accentColor, 85%)
      border-color $accentColor
      color $textColor
      .custom-block-title
        color $textColor
      a
        color $accentColor

.theme-color-intense
  color $secondary

.theme-color-text
  color $textColor

.light-background
  background-color $lightBackground

.border-bottom
  border-bottom-style solid
  border-color $secondary
  border-width 2px

.small-text
  font-size 12px