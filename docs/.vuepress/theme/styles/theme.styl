html, body
  background-color $theme-grey
  color $textColor
  font-size 14px
  font-weight 300

h2
  border-color $secondary
  border-width 2px

hr
  border-top-color $borderColor

kbd
  background $deep-grey

blockquote
  color $textColor

tr
  &:nth-child(2n)
    background-color $deep-grey

.content

  code
    padding 0.2em 0.5em
    background-color $deep-grey
    color $textColor
    font-weight bolder

  a
    code
      background-color $deep-grey
      color $secondary

  .custom-block
    background-color $white
    color $theme-grey
    border-top-right-radius 10px
    border-bottom-right-radius 10px

    code
      background-color $near-white
      color $theme-grey

    a
      color $accentColor

      code
        color $accentColor

    .custom-block-title
      color $deep-grey

    &.tip
      border-color $success

    &.warning
      border-color $info

    &.danger
      border-color $accentColor

.search-box
  input
    background-color $theme-grey
    color $textColor

  .suggestions
    background-color $white
    border 0

  .suggestion
    a
      color $deep-grey

    &.focused
      background-color $near-white

      a
        color $theme-grey

.algolia-search-wrapper
  .algolia-autocomplete
    .ds-dropdown-menu
      border: 0
      background-color $near-white

      &:before
        background-color $white
        border: 0;

@media (min-width: $MQMobile)
  .dropdown-wrapper
    .nav-dropdown
      background-color $white
      border 0

      .dropdown-item
        h4
          border-top-color $borderColor

.sw-update-popup
  background-color $white
  border 0

.navbar
  background-color $deep-grey

  .site-name
    visibility hidden
    color $near-white

  .links
    background-color $deep-grey

.page-edit
  .edit-link
    a
      color $light-grey

      &:hover,
      &:focus
        color $textColor

  .last-updated
    .prefix
      color $light-grey

    .time
      color $light-grey

.page-nav
  .inner
    color $light-grey
    border-top-color $borderColor

.sidebar
  background-color $theme-grey

  .sidebar-link
    font-size 14px
    font-weight 300

    &.active
      color $textColor
      font-weight bold

  .sidebar-sub-header
    .sidebar-link
      &.active
        color $accentColor
        font-weight inherit

  .sidebar-heading
    color $textColor
    font-weight bolder

    &.open,
    &:hover
      color $textColor

.nav-links
  a
    color $near-white

    &:hover,
    &:focus,
    &.router-link-active
      color $textColor

.home
  .hero
    margin 100px 0px

    h1
      visibility hidden

    .description
      font-size 28px
      font-weight 200
      color $light-grey

    .action-button
      border 0

  .features,
  .footer
    border-top-color $borderColor

  .feature
    h2
      color $textColor
      font-size 22px
      font-weight 400

    p
      color $textColor

  .footer
    color $near-white

// for centering images
.centre
  display: block
  margin-top: 20px
  margin-bottom: 10px
  margin-left: auto
  margin-right: auto
  width: 100%

.left
  display: inline
  margin-top: 20px
  margin-bottom: 10px
  margin-left: 0
  margin-right: auto
  width: 50%

.right
  display: inline
  margin-top: 20px
  margin-bottom: 10px
  margin-left: auto
  margin-right: 0
  width: 50%